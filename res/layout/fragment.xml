<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:layout_width="90dp"
            android:layout_height="115dp"
            android:id="@+id/Avatar"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:text="New Text"
            android:id="@+id/Title"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/Avatar"
            android:layout_alignParentEnd="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/author"
            android:layout_alignBottom="@+id/Avatar"
            android:layout_toRightOf="@+id/Avatar"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/date"
            android:layout_alignTop="@+id/author"
            android:layout_alignEnd="@+id/Title"/>

    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/repliesimg"
            android:src="@drawable/dialog"
            android:layout_below="@+id/author"
            android:layout_alignParentStart="true"/>

    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/likes"
            android:src="@drawable/love"
            android:layout_below="@+id/date"
            android:layout_alignEnd="@+id/date"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/repcount"
            android:layout_alignTop="@+id/repliesimg"
            android:layout_toRightOf="@+id/repliesimg"
            android:layout_alignBottom="@+id/repliesimg"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/likescount"
            android:layout_toLeftOf="@+id/likes"
            android:layout_alignBottom="@+id/likes"
            android:layout_alignTop="@+id/likes"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/message"
            android:layout_below="@+id/Title"
            android:layout_toRightOf="@+id/Avatar"
            android:layout_above="@+id/author"
            android:layout_alignEnd="@+id/date"/>
</RelativeLayout>